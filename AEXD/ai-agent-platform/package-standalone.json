{
  "name": "ai-agent-platform-standalone",
  "version": "1.0.0",
  "description": "AI Agent体验台 - 独立运行版",
  "main": "standalone-server.js",
  "bin": {
    "ai-agent-platform": "./standalone-server.js"
  },
  "pkg": {
    "scripts": [
      "app/**/*.js",
      "components/**/*.js",
      "lib/**/*.js",
      "prisma/**/*.js"
    ],
    "assets": [
      "public/**/*",
      "prisma/**/*",
      ".next/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-win-x86",
      "node18-macos-x64",
      "node18-macos-arm64"
    ],
    "outputPath": "dist-standalone"
  },
  "scripts": {
    "build-standalone": "pkg . --targets node18-win-x64 --output dist-standalone/AI-Agent-体验台.exe",
    "build-all": "pkg . --targets node18-win-x64,node18-win-x86,node18-macos-x64,node18-macos-arm64"
  },
  "dependencies": {
    "express": "^4.18.2",
    "serve-static": "^1.15.0",
    "cors": "^2.8.5",
    "@prisma/client": "^5.14.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}