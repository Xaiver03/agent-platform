{
  "buildCommand": "npm run build && npm run db:generate && npm run db:push",
  "outputDirectory": ".next",
  "installCommand": "npm install && npx prisma generate",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}