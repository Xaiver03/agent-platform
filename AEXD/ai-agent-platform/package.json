{
  "name": "ai-agent-platform",
  "version": "1.0.1",
  "description": "AI Agent 体验台 - 3D银河系探索平台",
  "author": "AI Agent Platform Team",
  "main": "electron/main.js",
  "private": false,
  "scripts": {
    "dev": "next dev",
    "build": "npm run db:setup && next build",
    "verify-components": "ls -la components/ | grep -E '(ImageUpload|MarkdownRenderer|RichTextEditor|FeedbackForm|SearchSuggestions)' || echo 'Component files check'",
    "db:setup": "prisma generate && prisma db push && npx tsx prisma/create-prod-db.ts",
    "vercel-build": "./vercel-build.sh",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "deploy:build": "npm run build && npm run db:generate",
    "deploy:server": "./scripts/deploy-to-server.sh",
    "deploy:hot": "./scripts/hot-update.sh",
    "setup:github": "./scripts/setup-github-actions.sh",
    "clean": "rm -rf .next out dist node_modules/.cache .webpack-bundle-analysis",
    "analyze": "ANALYZE=true npm run build",
    "bundle:size": "npm run build && npm run analyze",
    "deps:check": "npx depcheck",
    "deps:unused": "npx unimported",
    "vercel:prepare": "node scripts/prepare-vercel-db.js --seed",
    "vercel:deploy": "vercel --prod",
    
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron electron/main.js\"",
    "electron:build": "npm run build && electron-builder",
    "electron:pack": "electron-builder --dir",
    "electron:win": "electron-builder --win",
    "electron:mac": "electron-builder --mac",
    "electron:linux": "electron-builder --linux",
    "electron:all": "electron-builder --win --mac --linux",
    "electron:serve": "npm run build && npm run start"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@ant-design/nextjs-registry": "^1.0.2",
    "@hookform/resolvers": "^3.3.4",
    "@prisma/client": "^5.14.0",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "antd": "^5.26.5",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.394.0",
    "next": "^14.2.30",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.52.0",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.1",
    "styled-jsx": "^5.1.7",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0",
    "zod": "^3.23.8",
    "typescript": "^5"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.4.2",
    "@types/eslint": "^8",
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.4",
    "postcss": "^8",
    "prisma": "^5.14.0",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.aiagent.platform",
    "productName": "AI Agent 体验台",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "**/*",
      "!**/.env*.local",
      "!**/node_modules/**/*",
      "!**/.next/cache/**/*",
      "!**/dist-electron/**/*",
      "!**/electron-builder.yml"
    ],
    "extraFiles": [
      {
        "from": ".next",
        "to": ".next"
      },
      {
        "from": "public",
        "to": "public"
      },
      {
        "from": "prisma",
        "to": "prisma"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "public/favicon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "public/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AI Agent 体验台"
    }
  }
}
